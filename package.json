        "@youwol/fv-group": "^0.1.0",
        "@youwol/fv-input": "^0.1.0",
        "@youwol/fv-tabs": "^0.0.3",
        "@youwol/fv-tree": "^0.1.1",
        "@youwol/http-clients": "^0.1.4",
        "@youwol/platform-essentials": "^0.1.3",
        "uuid": "^8.3.2",
        "lodash": "4.17.15",
        "reflect-metadata": "0.1.13",
        "rxjs": "6.5.5"
    },
    "devDependencies": {
        "js-beautify": "^1.14.0",
        "@types/jest": "26.0.22",
        "@types/node": "14.14.37",
        "css-loader": "5.2.0",
        "del-cli": "3.0.1",
        "eslint": "7.23.0",
        "eslint-webpack-plugin": "2.5.3",
        "file-loader": "6.2.0",
        "html-webpack-plugin": "5.2.0",
        "jest": "26.6.3",
        "jest-junit": "12.0.0",
        "mini-css-extract-plugin": "1.3.9",
        "source-map-loader": "2.0.1",
        "ts-jest": "26.5.4",
        "ts-lib": "0.0.5",
        "ts-loader": "8.1.0",
        "typedoc": "0.20.34",
        "typescript": "4.2.3",
        "webpack": "^5.65.0",
        "webpack-bundle-analyzer": "^4.5.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.7.1"
    },
